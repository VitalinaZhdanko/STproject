<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>ListCar</servlet-name>
    <servlet-class>com.zhdanko.servlets.ListCarServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ListCar</servlet-name>
    <url-pattern>/listCar</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ListGroup</servlet-name>
    <servlet-class>com.zhdanko.servlets.ListGroupServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ListGroup</servlet-name>
    <url-pattern>/listGroup</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ClientData</servlet-name>
    <servlet-class>com.zhdanko.servlets.ClientDataServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ClientData</servlet-name>
    <url-pattern>/clientData</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ManagerConfirmClient</servlet-name>
    <servlet-class>com.zhdanko.servlets.ManagerConfirmClient</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ManagerConfirmClient</servlet-name>
    <url-pattern>/confirmClientData</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>WaitConfirm</servlet-name>
    <servlet-class>com.zhdanko.servlets.WaitStatusServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>WaitConfirm</servlet-name>
    <url-pattern>/waitConfirm</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Admin</servlet-name>
    <servlet-class>com.zhdanko.servlets.Admin</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>Auth</filter-name>
    <filter-class>com.zhdanko.filters.AuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Auth</filter-name>
    <url-pattern>/admin</url-pattern>
  </filter-mapping>

</web-app>
